<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/GlobalLayout_Tareas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tareas"
                android:id="@+id/txt_ayuda_tareasT"
                android:textSize="50sp"
                android:layout_marginTop="20sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="En esta herramienta tu puedes vincular tu calendario, listas de recordatorios o notas directamente de cuenta de Google y así organizar mejor tus actividades en relación con nuestra aplicación y si explotar al máximo los beneficios que proporciona."
                android:id="@+id/txt_ayuda_tareasTE"
                android:textSize="32sp"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:gravity="left"

                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
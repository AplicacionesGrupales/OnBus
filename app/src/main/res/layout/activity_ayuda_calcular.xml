<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/GlobalLayout_Calcular"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular Ruta"
                android:id="@+id/txt_ayuda_calcularT"
                android:textSize="50sp"
                android:layout_marginTop="20sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Por medio de diversas opciones tu podrás seleccionar una ruta y calcular cuánto tiempo aproximadamente legaras a tu destino, de igual manera que puedes controlar tus tiempos de traslado por la ciudad."
                android:id="@+id/txt_ayuda_calcularTE"
                android:textSize="32sp"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:gravity="left"

                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>